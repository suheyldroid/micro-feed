{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"files": {
		"includes": [
			"src/**/*.tsx",
			"src/**/*.ts",
			"!node_modules/**/*",
			"!.next/**/*"
		]
	},
	"linter": {
		"rules": {
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/**/*.tsx", "src/**/*.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"useExhaustiveDependencies": "off"
					}
				}
			}
		}
	],
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}
